<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortfolioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-84dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                app:srcCompat="@drawable/logo"
                android:padding="15dp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:padding="15dp"
                android:backgroundTint="@color/black"
                android:text="Book Appointment"
                android:onClick="openBookingActivity"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <Button
                android:id="@+id/button4"
                android:layout_width="200dp"
                android:padding="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"
                android:text=" Barbers "
                android:onClick="openPortfolioActivity"
                android:backgroundTint="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/button3" />


            <View
                android:id="@+id/separatorLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="80dp"/>

            <!-- "About Us" TextView -->
            <TextView
                android:id="@+id/aboutUsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorLine"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:fontFamily="monospace"
                android:padding="0dp"
                android:text="About Central Studios"
                android:textColor="@color/black"
                android:textSize="17dp" />


            <ImageView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/shop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/shop" />

            <TextView
                android:id="@+id/aboutUsTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorLine"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:fontFamily="monospace"
                android:padding="0dp"
                android:text="We are..."
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto"
                android:text="Lorem Ipsum has been the industry's ever since At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati cupiditate non provident, similique sunt in culpa qui officia deserunt mollitia animi, id est laborum et dolorum fuga. Et harum quidem rerum facilis est et expedita distinctio. Nam libero tempore, cum soluta nobis est eligendi optio cumque nihil impedit quo minus id"
                android:textAlignment="center"
                android:textSize="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:fontFamily="monospace"
                android:text="What we offer"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/haircut"
                app:srcCompat="@drawable/haircut"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Haircuts for every style"
                android:textSize="13dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/beard"
                app:srcCompat="@drawable/beard"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Crafting beards, creating legends - Unleash your style"
                android:textSize="13dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/braid"
                app:srcCompat="@drawable/braid"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Elevate your look with expert braids at Central Studios"
                android:textSize="13dp"
                android:layout_marginTop="10dp"/>


            <View
                android:id="@+id/separatorLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="30dp"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorLine"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:text="Central Studios"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="876 Weston Road, York, Ontario M5N 3R6, Canada"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="centrastudio01@gmail.com"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/contacts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/roboto"
                android:text="(416)766-6957"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/aboutUsTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorLine"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="monospace"
                android:text="Hours"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_margin="5dp">

                <!-- Table Header -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday: "
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11am - 7pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11am - 7pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11am - 7pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10am - 7pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10am - 8pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday: "
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11am - 6pm"
                        android:fontFamily="@font/roboto"
                        android:textSize="17dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginBottom="30dp"
                android:text="Â© 2023 Central Studios. All Rights Reserved." />

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLiveChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:onClick="openConsultationActivity"
            android:src="@android:drawable/sym_action_chat"
            app:backgroundTint="@color/black"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/activity_nav"
        app:menu="@menu/nav_menu_on"
        android:id="@+id/nav_view"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>

